{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
         "max-len": [
            "error",
            120,
            2,
            {
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-confusing-arrow": "off",
        "no-eq-null": "off",
        "no-negated-condition": "off",
        "no-undefined": "off",
        "linebreak-style":"off",
        "camelcase":"off",
        "no-shadow":"off",
        "no-unused-vars":"off",
        "prefer-const":"off",
        "no-console":"off",
        "prefer-destructuring": [
            "off"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "quote-props": "off"
    }
}
